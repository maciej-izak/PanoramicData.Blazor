@typeparam TItem

	<CascadingValue Value="(PDTree<TItem>)this" Name="Tree">

		<div class="pdtree">
			@if (ShowRoot)
			{
				@if (NodeTemplate == null)
				{
					<PDTreeNode TItem="TItem" Node="RootNode" ShowLines="ShowLines" AfterEdit="OnAfterEdit" />
				}
				else
				{
					<PDTreeNode TItem="TItem" Node="RootNode" ShowLines="ShowLines" AfterEdit="OnAfterEdit">
						<NodeTemplate>@NodeTemplate(context)</NodeTemplate>
					</PDTreeNode>
				}
			}
			else
			{
				if (RootNode.Nodes != null)
				{
					foreach (var subNode in RootNode.Nodes)
					{
						@if (NodeTemplate == null)
						{
							<PDTreeNode TItem="TItem" Node="subNode" ShowLines="ShowLines" AfterEdit="OnAfterEdit" />
						}
						else
						{
							<PDTreeNode TItem="TItem" Node="subNode" ShowLines="ShowLines" AfterEdit="OnAfterEdit">
								<NodeTemplate>@NodeTemplate(context)</NodeTemplate>
							</PDTreeNode>
						}
					}
				}
			}
		</div>

	</CascadingValue>
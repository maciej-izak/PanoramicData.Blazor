<div class="pdtoolbaritem @(IsVisible ? "" : "d-none") @(ShiftRight ? "align-right" : "") @ItemCssClass" style="@ItemStyle" >
	<div class="pdtoolbartextbox @CssClass">
		@if (!string.IsNullOrWhiteSpace(Label))
		{
			<label>@Label</label>
		}
		<input class="form-control @InputCssClass"
			   value="@Value"
			   readonly="@(!IsEnabled)"
			   @oninput="OnInput"
			   @onkeypress="OnKeypress" />
		@if (ShowClearButton)
		{
			<span class="pdttb-clear-btn" @onclick="OnClear">
				<i class="fas fa-times"></i>
			</span>
		}
	</div>
</div>
<div class="pdtreenode">

	<div class="pdtreenode_header">
		@if (Node.Isleaf)
		{
			<i class="far fa-plus-square fa-hidden"></i>
		}
		else
		{
			<i class="far @(Node.IsExpanded ? "fa-minus-square" : "fa-plus-square") pd-pointer" @onclick="() => Node.IsExpanded = !Node.IsExpanded"></i>
		}
		<div class="pdtreenode_content @(Node.IsSelected ? "selected" : null)" @onclick="() => Node.IsSelected = !Node.IsSelected">
			@if (NodeTemplate == null)
			{
				<span class="pl-1">@Node.Text</span>
			}
			else
			{
				@NodeTemplate(Node);
			}
		</div>
	</div>

	@if (!Node.Isleaf)
	{

		<div class="pdtreenode_child_content @(ShowLines ? "pdtree_lines" : null)">
			@if (Node.Nodes != null && Node.IsExpanded)
			{
				foreach (var subNode in Node.Nodes)
				{
					if (NodeTemplate == null)
					{
						<PDTreeNode Node="subNode" ShowLines="ShowLines" />
					}
					else
					{
						<PDTreeNode Node="subNode" ShowLines="ShowLines">
							<NodeTemplate>@NodeTemplate(context)</NodeTemplate>
						</PDTreeNode>
					}
				}
			}
		</div>
	}

</div>
<div class="pdsplitter @(Direction == SplitDirection.Horizontal ? "horizontal" : "vertical") @CssClass">
	@foreach (var panel in Panels)
	{
		<div class="pdsplitpanel @panel.CssClass" id="@panel.Id">
			@panel.ChildContent
		</div>
	}
</div>

<CascadingValue Name="Splitter" Value="@this">
	@ChildContent
</CascadingValue>
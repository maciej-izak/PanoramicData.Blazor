@page "/pdtoolbar"
@using PanoramicData.Blazor.Services;
<h1>PDToolbarPage</h1>

<DemoSourceView SourceFiles="Pages/PDToolbarPage.razor, Pages/PDToolbarPage.razor.cs">

	<PDToolbar>

		<PDToolbarDropdown Text="File"
						   IconCssClass="fas fa-fw fa-file"
						   TextCssClass="d-none d-sm-none d-md-inline"
						   IsVisible="ShowButtons"
						   IsEnabled="EnableButtons"
						   Items="_fileMenuItems"
						   Click="OnFileMenuClick" />

		<PDToolbarButton Key="Rename"
						 Text="&&Rename"
						 CssClass="btn-secondary"
						 IconCssClass="fas fa-fw fa-edit"
						 TextCssClass="d-none d-sm-none d-md-inline"
						 Click="OnButtonClick"
						 ShortcutKey="@(ShortcutKey.Create("ctrl-r"))"
						 IsVisible="ShowButtons"
						 IsEnabled="EnableButtons" />

		<PDToolbarSeparator IsVisible="ShowButtons" />

		<PDToolbarButton Key="Download"
						 Text="&&Download"
						 CssClass="btn-secondary"
						 IconCssClass="fas fa-fw fa-file-download"
						 TextCssClass="d-none d-sm-none d-md-inline"
						 ShortcutKey="@(ShortcutKey.Create("ctrl-d"))"
						 Click="OnButtonClick"
						 IsVisible="ShowButtons"
						 IsEnabled="EnableButtons" />

		<PDToolbarSeparator IsVisible="ShowButtons" />

		<PDToolbarTextbox Width="100%"
						  InitialValue="@_searchText"
						  Label="Search"
						  DebounceWait="250"
						  Placeholder="search text"
						  ShowClearButton="true"
						  ValueChanged="OnValueChanged"
						  Keypress="OnKeypress"
						  Cleared="OnCleared" />

		<PDToolbarPlaceholder>
			<span>Options</span>
		</PDToolbarPlaceholder>

		<PDToolbarButton Text="@(EnableButtons ? "Disable" : "Enable")"
						 ToolTip="Disable or enable buttons"
						 CssClass="btn-secondary d-none d-sm-none d-md-none d-lg-inline"
						 Click="() => { EnableButtons = !EnableButtons; }"
						 ShiftRight="true" />

		<PDToolbarButton Text="@(ShowButtons ? "Hide" : "Show")"
						 ToolTip="Show or hide buttons"
						 CssClass="btn-secondary d-none d-sm-none d-md-none d-lg-inline"
						 Click="() => { ShowButtons = !ShowButtons; }" />
	</PDToolbar>

	<EventView />

</DemoSourceView>
@page "/pdsplitter"
<h1>PDSplitter</h1>

<div style="height: calc(100vh - 140px);">

	<PDSplitter Direction="SplitDirection.Horizontal" GutterSize="4" ExpandToMin="true">

		<PDSplitPanel Size="1" MinSize="200">
			<h3>Panel 1</h3>
		</PDSplitPanel>

		<PDSplitPanel Size="2" MinSize="200">
			<h3>Panel 2</h3>
		</PDSplitPanel>

		<PDSplitPanel Size="1">

			<PDSplitter Direction="SplitDirection.Vertical" SnapOffset="0" DragInterval="50">

				<PDSplitPanel Size="1" MinSize="50">
					<h3>Panel 4</h3>
				</PDSplitPanel>

				<PDSplitPanel Size="2" MinSize="200">
					<h3>Panel 5</h3>
				</PDSplitPanel>

			</PDSplitter>

		</PDSplitPanel>

	</PDSplitter>

</div>